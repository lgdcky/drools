<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.server.dao.RuleDao">
    <resultMap id="Rule" type="com.server.command.RuleCommand">
        <id property="id" column="g_id" jdbcType="BIGINT"/>
        <result column="g_groupCode" property="groupCode" jdbcType="VARCHAR"/>
        <result column="g_groupName" property="groupName" jdbcType="VARCHAR"/>
        <result column="g_description" property="description" jdbcType="VARCHAR"/>
        <result column="g_create_time" property="create_time" jdbcType="DATE"/>
        <collection property="ruleGroupRefList" ofType="com.server.model.RuleGroupRef">
            <id property="id" column="r_id" jdbcType="BIGINT"/>
            <result column="r_rule_id" property="rule_id" jdbcType="BIGINT"/>
            <result column="r_ruleGroup_id" property="ruleGroup_id" jdbcType="BIGINT"/>
            <result column="r_orderNo" property="orderNo" jdbcType="INTEGER"/>
            <result column="r_state" property="state" jdbcType="INTEGER"/>
            <result column="r_create_time" property="create_time" jdbcType="DATE"/>
            <collection property="ruleHeadList" ofType="com.server.model.RuleHead">
                <id property="id" column="h_id" jdbcType="BIGINT"/>
                <result column="packageName" property="packageName" jdbcType="VARCHAR"/>
                <result column="remarks" property="remarks" jdbcType="VARCHAR"/>
                <result column="ruleName" property="ruleName" jdbcType="VARCHAR"/>
                <result column="ruleString" property="ruleString" jdbcType="VARCHAR"/>
                <result column="h_create_Time" property="create_Time" jdbcType="DATE"/>
                <collection property="ruleInfoList" ofType="com.server.model.RuleInfo">
                    <id column="i_id" property="id" jdbcType="BIGINT"/>
                    <result column="rule_id" property="rule_id" jdbcType="BIGINT"/>
                    <result column="type" property="type" jdbcType="VARCHAR"/>
                    <result column="parent" property="parent" jdbcType="VARCHAR"/>
                    <result column="obj" property="obj" jdbcType="VARCHAR"/>
                    <result column="calculation" property="calculation" jdbcType="VARCHAR"/>
                    <result column="i_attribute" property="attribute" jdbcType="VARCHAR"/>
                    <result column="i_create_time" property="create_time" jdbcType="DATE"/>
                    <collection property="ruleConditions" ofType="com.server.model.RuleCondition">
                        <id column="c_id" property="id" jdbcType="BIGINT"/>
                        <result column="ruleInfo_id" property="ruleInfo_id" jdbcType="BIGINT"/>
                        <result column="conditionKey" property="conditionKey" jdbcType="VARCHAR"/>
                        <result column="op" property="op" jdbcType="VARCHAR"/>
                        <result column="conditionValue" property="conditionValue" jdbcType="VARCHAR"/>
                        <result column="paramType" property="paramType" jdbcType="VARCHAR"/>
                        <result column="associationType" property="associationType" jdbcType="VARCHAR"/>
                        <result column="c_type" property="type" jdbcType="VARCHAR"/>
                        <result column="c_create_time" property="create_time" jdbcType="DATE"/>
                    </collection>
                </collection>
                <collection property="ruleGlobalList" ofType="com.server.model.RuleGlobal">
                    <id property="id" column="l_id" jdbcType="BIGINT"/>
                    <result column="rule_id" property="rule_id" jdbcType="BIGINT"/>
                    <result column="globalName" property="globalName" jdbcType="VARCHAR"/>
                    <result column="globalType" property="globalType" jdbcType="VARCHAR"/>
                    <result column="l_create_time" property="create_time" jdbcType="DATE"/>
                </collection>
                <collection property="ruleOpList" ofType="com.server.model.RuleOp">
                    <id column="o_id" property="id" jdbcType="BIGINT"/>
                    <result column="rule_id" property="rule_id" jdbcType="BIGINT"/>
                    <result column="objName" property="objName" jdbcType="VARCHAR"/>
                    <result column="o_attribute" property="attribute" jdbcType="VARCHAR"/>
                    <result column="o_type" property="type" jdbcType="VARCHAR"/>
                    <result column="value" property="value" jdbcType="VARCHAR"/>
                    <result column="o_create_time" property="create_time" jdbcType="DATE"/>
                </collection>
            </collection>
        </collection>
    </resultMap>

    <sql id="BASE_SQL">
        g.id as g_id, g.groupCode as g_groupCode,g.groupName as g_groupName,g.description as g_description,g.create_time as
        g_create_Time,
        r.id as r_id, r.rule_id as r_rule_id,r.ruleGroup_id as r_ruleGroup_id,r.orderNo as r_orderNo,r.state as
        r_state,r.create_time as r_create_time,
        h.id as h_id, h.packageName,h.remarks,h.ruleName,h.ruleString,h.create_Time as h_create_Time,
        l.id as l_id, l.rule_id,l.globalName,l.globalType,l.create_time as l_create_Time,
        i.id as i_id, i.rule_id,i.type,i.parent,i.obj,i.calculation,i.attribute as i_attribute,i.create_time as
        i_create_Time,
        c.id as c_id, c.ruleInfo_id,c.conditionKey,c.op,c.conditionValue,c.associationType,c.paramType,c.type as
        c_type,c.create_time as c_create_Time,
        o.id as o_id, o.rule_id,o.objName,o.attribute as o_attribute,o.value,o.type as o_type,o.create_time as
        o_create_Time
    </sql>

    <select id="findRuleById" resultMap="Rule">
        SELECT
        <include refid="BASE_SQL"/>
        FROM ruleGroup g left join ruleGroupRef r
        on g.id=r.ruleGroup_id left join ruleHead h
        on h.id=r.rule_id left join ruleGlobal l
        on h.id=l.rule_id
        left join ruleInfo i
        on h.id=i.rule_id
        left join ruleCondition c
        on i.id=c.ruleInfo_id
        left join ruleOp o
        on h.id=o.rule_id
        WHERE
        r.state = 1 AND
        h.id=#{id}
        ORDER BY g.groupCode,r.orderNo,c.id;
    </select>

    <select id="findAllRule" resultMap="Rule">
        SELECT
        <include refid="BASE_SQL"/>
        FROM ruleGroup g left join ruleGroupRef r
        on g.id=r.ruleGroup_id left join ruleHead h
        on h.id=r.rule_id left join ruleGlobal l
        on h.id=l.rule_id
        left join ruleInfo i
        on h.id=i.rule_id
        left join ruleCondition c
        on i.id=c.ruleInfo_id
        left join ruleOp o
        on h.id=o.rule_id
        WHERE
        r.state = 1
        ORDER BY g.groupCode,r.orderNo,c.id;
    </select>

    <select id="findAllRuleByGroup" resultMap="Rule">
        SELECT
        <include refid="BASE_SQL"/>
        FROM ruleGroup g left join ruleGroupRef r
        on g.id=r.ruleGroup_id left join ruleHead h
        on h.id=r.rule_id left join ruleGlobal l
        on h.id=l.rule_id
        left join ruleInfo i
        on h.id=i.rule_id
        left join ruleCondition c
        on i.id=c.ruleInfo_id
        left join ruleOp o
        on h.id=o.rule_id
        WHERE
        r.state = 1
        AND g.groupCode = #{groupCode}
        ORDER BY g.groupCode,r.orderNo
    </select>

    <select id="findAllRuleByGroupWithPage" resultMap="Rule" parameterType="map">
        SELECT
        <include refid="BASE_SQL"/>
        FROM ruleGroup g left join ruleGroupRef r
        on g.id=r.ruleGroup_id left join ruleHead h
        on h.id=r.rule_id left join ruleGlobal l
        on h.id=l.rule_id
        left join ruleInfo i
        on h.id=i.rule_id
        left join ruleCondition c
        on i.id=c.ruleInfo_id
        left join ruleOp o
        on h.id=o.rule_id
        WHERE
        r.state = 1
        <if test="groupCode!=null">
            AND g.groupCode = #{groupCode}
        </if>
        ORDER BY g.groupCode,r.orderNo
        <if test="pageNum!=null">
            limit #{pageNum},#{size}
        </if>
    </select>

</mapper>